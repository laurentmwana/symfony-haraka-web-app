{% extends 'layouts/admin.html.twig' %}

{% block title "Notification" %}
{%block body %}
<twig:Card>
  <div class="max-w-lg mb-4">
    <h1 class="mb-3 text-base font-semibold text-slate-700 dark:text-gray-300">
      Notification
    </h1>
  </div>

  <div class="flex items-center justify-between gap-x-3 mb-4">
    <twig:Search placeholder="Rechercher une notification" />
  </div>

  <div>
    <ol class="relative border-s border-gray-200 dark:border-gray-700 grid grid-cols-1 md:grid-cols-2 gap-4">
      {% for notification in notifications %}
      <li class="mb-10 ms-4">
        <div
          class="absolute w-3 h-3 bg-indigo-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700">
        </div>
        <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
          {{ notification.createdAt|ago }}
        </time>
        <h3 class="text-base font-semibold text-gray-900 dark:text-white">
          {{ notification.title|u.truncate(80, '...') }}
        </h3>
        <p class="text-base font-normal text-gray-500 dark:text-gray-400">
          {{ notification.description|u.truncate(100, '...') }}
        </p>
      </li>
      {% else %}
      {% endfor %}
    </ol>
  </div>
  <div>
    {{ knp_pagination_render(notifications) }}
  </div>
</twig:Card>
{% endblock %}