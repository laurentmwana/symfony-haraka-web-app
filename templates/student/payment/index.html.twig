{% extends 'layouts/student.html.twig' %}
{% block title "Tableau de bord" %}
{% block body %}
<twig:Card>
  <div class="max-w-lg mb-4">
    <h1 class="mb-3 text-base font-semibold text-slate-700 dark:text-gray-300">
      Paiement
    </h1>
  </div>

  <div class="flex items-center justify-between gap-x-3 mb-4">
    <twig:Search placeholder="Rechercher un frais acadÃ©mique" />
    <twig:Button size="default">
      <i class="bi bi-plus"></i>
    </twig:Button>
  </div>


  {% for payment in payments %}
  <div class="mb-3">
    <twig:Card class="border-red-200">
      <div class=" flex items-center gap-4 justify-between mb-3">
        <h2 class="text-sm text-gray-700 dark:text-gray-50">
          Statut du paiement
        </h2>
        <twig:Badge variant="">

        </twig:Badge>
      </div>

    </twig:Card>
  </div>

  <twig:Table>
    <twig:TableHeader>
      <twig:TableRow>
        <twig:TableHead> Montant </twig:TableHead>
        <twig:TableHead> Tranche </twig:TableHead>
        <twig:TableHead> Promotion </twig:TableHead>
        <twig:TableHead> Payer </twig:TableHead>
        <twig:TableHead> ... </twig:TableHead>
      </twig:TableRow>
    </twig:TableHeader>

    <twig:TableBody>

      <twig:TableRow>
        <twig:TableCell>
          {{ payment.amount.price }} Fc
        </twig:TableCell>

        <twig:TableCell>
          {{ payment.installment.price }} Fc
        </twig:TableCell>

        <twig:TableCell>
          <twig:Badge type="secondary">

          </twig:Badge>

        </twig:TableCell>

        <twig:TableCell>
          {{ payment.paymentAt|ago }}
        </twig:TableCell>
      </twig:TableRow>
    </twig:TableBody>
  </twig:Table>
  {% endfor %}

  <div>
    {{ knp_pagination_render(payments) }}
  </div>
</twig:Card>
{% endblock %}