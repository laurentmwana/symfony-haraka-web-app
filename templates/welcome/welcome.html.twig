{% extends 'layouts/base.html.twig' %}

{% block title "Page d'accueil" %}

{% block hero %}
{% include "welcome/_hero.html.twig" %}
{% endblock %}

{% block body %}

<div class="container py-12">
  <div class="mx-auto max-w-4xl">
    <twig:WrapperSection title="Frais académique" description="Nous avons répondu aux questions que vous vous posez sur l'entreprise, l'entrepreneuriat, et pourquoi suivre nos
    formations (textuelles ou vidéo).">
      <div class="flex flex-col gap-6">
        {% for amount in amounts %}
        <twig:Card>
          <h1
            class="mb-3 text-3xl font-extrabold tracking-tight md:text-4xl  leading-snug text-transparent bg-clip-text bg-gradient-to-r from-slate-700 via-primary/60 to-black/70">
            {{ amount.price|number_format(2, '.', ',') }} Fc
          </h1>
          <p class="text-base text-muted-foreground mb-2">
            {{ amount.programme.name }}
          </p>
          <twig:Table>
            <twig:TableHeader>
              <twig:TableRow>
                <twig:TableHead>Tranche(s) </twig:TableHead>
                <twig:TableHead> Priorité </twig:TableHead>
              </twig:TableRow>
            </twig:TableHeader>
            <twig:TableBody>
              {% for installment in amount.installments %}
              <twig:TableRow>
                <twig:TableCell>
                  {{ installment.price|number_format(2, '.', ',') }} Fc
                </twig:TableCell>

                <twig:TableCell>
                  <twig:Badge type="outline">
                    {{ installment.priority }}
                  </twig:Badge>
                </twig:TableCell>
              </twig:TableRow>
              {% endfor %}
            </twig:TableBody>
          </twig:Table>
        </twig:Card>
        {% endfor %}
      </div>
    </twig:WrapperSection>

    <twig:WrapperSection title="Questions fréquemment posées" description="Nous avons répondu aux questions que vous vous posez sur l'entreprise, l'entrepreneuriat, et pourquoi suivre nos
        formations (textuelles ou vidéo).">
      {% include "welcome/_quiz.html.twig" with {quizzes} %}
    </twig:WrapperSection>
  </div>
</div>
{% endblock %}