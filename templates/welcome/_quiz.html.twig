{% for quiz in quizzes %}
<twig:Card class="hover:border-primary mb-4">
  <a href="{{ path('quiz.show', {id: quiz.id}) }}" class="block h-full w-full">
    <h2 class="mb-2 text-xl font-semibold text-gray-700 dark:text-gray-50">
      {{ quiz.request|u.truncate(50, '...') }}
    </h2>
    <p class="text-sm mb-2">
      {{ quiz.createdAt|ago }}
    </p>
    <p class="mt-3 text-sm text-muted-foreground">
      {{ quiz.response|u.truncate(100, '...') }}
    </p>
  </a>
</twig:Card>
{% endfor %}